#include <stdio.h>

void geo(int *a, int n, int r){
    a[0] = 1;
    for(int i=1;i<n;i++){
        a[i] = a[i-1] * r;
    }
}

void graph(int *a, int n){
    for(int i=0;i<n;i++){
        printf("%4d | ", a[i]);
        for(int j=0;j<a[i]/10;j++){
            printf("*");
        }
        printf("\n");
    }
}

int main(){
    int n=8, r=2;
    int a[50];

    geo(a, n, r);
    graph(a, n);
}
